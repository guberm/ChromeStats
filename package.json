{
  "name": "chrome-stats-monitor",
  "version": "1.0.0",
  "description": "Monitor Chrome Web Store extension stats and send email notifications on changes",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "app": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chrome",
    "monitoring",
    "email",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/chrome-stats-monitor"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "cheerio": "1.0.0-rc.12",
    "dotenv": "^16.3.0",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.0"
  },
  "build": {
    "appId": "com.chromestats.monitor",
    "productName": "Chrome Stats Monitor",
    "publish": null,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "config/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json",
      ".env"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
